    HostName 10.10.10.103
    User ubuntu
    IdentityFile ~/.ssh/k8s.key
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

Host k8s-worker-01
    HostName 10.10.10.201
    User ubuntu
    IdentityFile ~/.ssh/k8s.key
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

Host k8s-worker-02
    HostName 10.10.10.202
    User ubuntu
    IdentityFile ~/.ssh/k8s.key
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

